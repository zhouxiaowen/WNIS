@{
    ViewBag.Title = "Module";
}

<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            @*全屏使用*@
            <div class="widget-header bordered-bottom" style="">
                <span class="widget-caption"><i class="fa fa-cogs"></i>&nbsp;系统菜单管理</span>
                <div class="widget-buttons">
                    <a href="#" id="fullscreen-toggler" class="fullscreen">
                        <i class="glyphicon glyphicon-fullscreen"></i>
                    </a>
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="sidebar-toggler" href="#">
                        <i class="fa fa-arrows-h"></i>
                    </a>
                </div>
                <hr />
            </div>

            <div id="main" class="widget-body no-padding">
                <div class="container-fluid">
                    <div class="row" style="padding:10px 0px;">
                        <div class="col-md-12">
                            <a id="BtnRefresh" class="btn btn-blue" href="javascript:void(0);"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                            <a id="BtnAdd" class="btn btn-blue" href="javascript:void(0);"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        </div>
                    </div>
                    <div class="row padding-btm-5">
                        <div class="col-md-12 form-inline">
                            <input type="text" placeholder="请输入关键字" id="TxtKey" class="form-control" style="width:200px;height:28px;">
                            &nbsp;
                            <a id="BtnSearch" class="btn btn-blue" href="javascript:void(0);"><i class="fa fa-search"></i>&nbsp;搜索</a>
                        </div>
                    </div>

                    <div class="row" style="padding:0px 10px;">
                        <table class="table table-bordered table-hover table-striped" id="GridUser">
                            <thead class="">
                                @*bordered-blueberry*@
                                <tr role="row">
                                    <th style="width:60px;">编辑</th>
                                    <th style="width:60px;">删除</th>
                                    <th>菜单Id</th>
                                    <th>上级菜单Id</th>
                                    <th>模块编码</th>
                                    <th>菜单名称</th>
                                    <th>描述</th>
                                    <th>级别</th>
                                    <th>图标样式</th>
                                    <th>Url地址</th>
                                    <th>打开目标</th>
                                    <th>排序</th>
                                    <th>状态</th>
                                    <th>最后操作时间</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="SpanEdit" style="display:none;">
    <div class="container-fluid">
        <form id="EditForm" onsubmit="return false;">
            <input type="hidden" id="TxtId" />
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*菜单Id：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtCDId" class="form-control" name="ucdid">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*上级菜单Id：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtPId" class="form-control" name="upid">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*模块编码：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtModuleCode" class="form-control" name="umodulecode">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*菜单名称：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtName" class="form-control" name="uname">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*描述：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtRemark" class="form-control" name="uremark">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*级别：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtLevels" class="form-control" name="ulevels">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*图标样式：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtIcon" class="form-control" name="uicon">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*Url地址：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtLinkUrl" class="form-control" name="ulinkurl">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*打开目标：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtTarget" class="form-control" name="utarget">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*排序：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtPX" class="form-control" name="upx">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*状态：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtStatus" class="form-control" name="ustatus">
                </div>
            </div>
            <div class="row padding-top-5 form-group">
                <label class="col-sm-3 control-label text-right">*最后操作时间：</label>
                <div class="col-sm-9">
                    <input type="text" placeholder="" id="TxtLastTime" class="form-control" name="ulasttime">
                </div>
            </div>

            <div class="Edit-Footer">
                <button type="submit" class="btn btn-info" id="BtnSubmit"><i class="fa fa-check"></i>&nbsp;提交</button>
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;
                <button type="button" class="btn btn-darkorange" id="BtnCancel"><i class="fa fa-close"></i>&nbsp;取消</button>
            </div>
        </form>
    </div>
</div>
<script src="~/Content/Sys/scripts/Menus.js"></script>


